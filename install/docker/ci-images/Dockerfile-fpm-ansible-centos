FROM cdrx/fpm-centos
ENV AWS_CLI_VERSION 1.18.5
ENV ANSIBLE_VERSION 2.9.2

RUN yum install epel-release -y && \
    rpm -v --import http://li.nux.ro/download/nux/RPM-GPG-KEY-nux.ro && \
    rpm -Uvh http://li.nux.ro/download/nux/dextop/el7/x86_64/nux-dextop-release-0-5.el7.nux.noarch.rpm ||true && \
    yum update -y && \
#Essential packages
    yum install -y tftp-server \
     crontabs \
     gcc \
     gcc-c++ \
     cronie \
     openssl-devel \
     cronie-anacron \
     make \
     gdb \
     net-tools \
     gnutls-devel \
     python-devel \
     texinfo \
     kernel-headers \
     acl \
     bind-utils \
     which \
     git \
#Asterisk packages
     dh-autoreconf \
     sqlite-devel \
     subversion \
     unixODBC \
     unzip \
#Kamailio packages
     bison \
     bison-devel \
     expat \
     expat-devel \
     flex \
     iptables-services \
     libtool-ltdl-devel \
     ffmpeg \
     ffmpeg-devel \
     libxml2-devel \
     libunistring-devel.x86_64 \
     libuuid \
     libuuid-devel \
     lynx \
     redis \
     hiredis \
     hiredis-devel \
     python-devel \
#Virtualenv packages
     python3 \
     python3-devel \
     python3-pip.noarch \
     cairo \
     cairo-devel \
     libxslt-devel \
     libxslt \
     libjpeg-turbo-devel \
     libffi-devel \
     libffi \
     libpqxx \
     libpqxx-devel \
     libsass-devel \
     libsass \
     pycairo \
     pycairo-devel \
     python2-psycogreen.noarch \
     python-lxml \
     python-psycopg2.x86_64 \
#Rtpengine packages
     iptables-devel \
     xmlrpc-c-devel \
     xmlrpc-c \
     glib2-devel \
     glib2 \
     pcre \
     pcre-devel \
     libevent-devel \
     json-glib-devel \
     libpcap-devel \
     hiredis \
     hiredis-devel && \
    pip3 install "awscli==$AWS_CLI_VERSION" && \
    pip3 install "ansible==$ANSIBLE_VERSION" --user
